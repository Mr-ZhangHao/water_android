<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>
        <item name="android:windowAnimationStyle">@style/Activity.Animation</item>
        <item name="colorControlNormal">@color/color_primary_text_highlight</item><!-- Toolbar返回按钮颜色 -->
    </style>

    <!--启动页-->
    <style name="AppTheme.Dark.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@mipmap/img_start</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Common_Text_Toolbar_Small">
        <item name="android:textColor">@color/base_editText</item>
        <item name="android:textSize">@dimen/size_primary_toolbar_text_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="custom_dialogs" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/primaryBackLight</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="buttonBarPositiveButtonStyle">@style/buttonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/buttonStyle</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
    <!-- Activity 切换动画 -->
    <style name="Activity.Animation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>
    <!--自定义Dialog样式-->
    <style name="dialog" parent="AlertDialog.AppCompat">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <declare-styleable name="DropdownLayout">
        <attr name="dropSpeed" format="integer"/>
    </declare-styleable>

    <!--按钮样式-->
    <style name="buttonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/primaryText</item>
    </style>
    <style name="AppTheme.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/color_primary_text_highlight</item>
        <item name="android:windowAnimationStyle">@style/Activity.Animation</item>
        <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
        <item name="colorControlNormal">@color/color_primary_text_highlight</item>
    </style>


    <style name="OverflowMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">5dp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
    </style>


    <style name="AppThemeFullScreen" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <!--       <item name="android:windowFullscreen">true</item>
               <item name="android:windowIsTranslucent">true</item>-->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="common_btn_bg">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/bg_common_btn_select_or_no</item>
        <item name="android:textColor">@color/chart_white</item>
        <item name="android:layout_marginTop">@dimen/dp50</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:enabled">false</item>
        <item name="android:layout_marginLeft">@dimen/dp30</item>
        <item name="android:layout_marginRight">@dimen/dp30</item>
        <item name="android:layout_height">@dimen/dp45</item>
    </style>

    <style name="common_img_code">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <style name="common_edit_code">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:inputType">text</item>
        <item name="android:theme">@style/MyEditText</item>
        <item name="android:textColor">@color/base_editText</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:textColorHint">@color/base_hint</item>
    </style>
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/base_hint</item>
        <item name="colorControlActivated">@color/edit_select_bg</item>
    </style>
    <style name="Common_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#F5F5F5</item>
    </style>
    <style name="common_tv_code">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="common_check_pwd">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/bg_pwd_check</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="common_user_rl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/dp30</item>
        <item name="android:layout_marginRight">@dimen/dp30</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="common_cancel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp15</item>
        <item name="android:textColor">@color/base_hint</item>
        <item name="android:layout_marginTop">@dimen/dp25</item>
    </style>
    <style name="MySeekbarSytle" parent="Base.Widget.AppCompat.SeekBar">
        <item name="android:thumb">@drawable/thumb</item>
        <item name="android:progressDrawable">@drawable/po_seekbar</item>
    </style>

    <style name="common_arrow">
        <item name="android:layout_marginRight">@dimen/dp20</item>
        <item name="android:layout_width">@dimen/dp20</item>
        <item name="android:layout_height">@dimen/dp20</item>
    </style>

    <style name="me_ll_icon">
        <item name="android:layout_width">@dimen/dp20</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_height">@dimen/dp20</item>
    </style>

    <style name="me_ll_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp5</item>
        <item name="android:textColor">@color/base_editText</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>

    <style name="me_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/primaryBackLight</item>
        <item name="android:layout_height">@dimen/dp45</item>
    </style>

    <style name="framelayout_line">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="rl_bind_account">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">@dimen/dp15</item>
        <item name="android:layout_marginTop">@dimen/dp5</item>
        <item name="android:layout_marginRight">@dimen/dp15</item>
        <item name="android:layout_height">@dimen/dp90</item>
    </style>

    <style name="bind_account_img_add">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="ll_bind_account">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/dp25</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="bing_account_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
