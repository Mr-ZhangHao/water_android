<?xml version="1.0" encoding="utf-8"?>
<layout>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_home"
    android:background="@color/primaryBackNormal"
    android:padding="12dp">

    <TextView
        android:id="@+id/item_home_position"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="1"
        android:textColor="#fff"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/item_home_chg"
        android:layout_width="75dp"
        android:layout_height="29dp"
        android:layout_gravity="end"
        android:background="@drawable/selector_market_up_down"
        android:gravity="center"
        android:text="+15.00%"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="75dp"
        android:layout_marginLeft="24dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.56"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_home_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LTC/USDT"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_home_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.44"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_home_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_home_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:maxLength="16"
                android:text="759.14"
                android:textColor="@color/primaryTextGray"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
</layout>